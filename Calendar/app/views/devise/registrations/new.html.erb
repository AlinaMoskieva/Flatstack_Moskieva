
<head>
  <link href="style.css" rel="stylesheet">
</head>
<br>
<br>
<div class="row">
  <div class="small-8 medium-6 large-5 small-centered columns">
    <div class="header panel">
      <div class="sign">
      <h1>Sign up</h1>
      </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %>
      <br>
    <%= f.text_field :name,  autofocus: true, placeholder: "Moskieva Alina" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Ğ assword" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Ğ assword" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "button expand secondary radius" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
